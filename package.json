{
  "name": "mangwale-search",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only apps/search-api/src/main.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/search-api/src/main.js",
    "start:api": "node dist/search-api/src/main.js",
    "start:nginx": "nginx -p $(pwd)/nginx -c $(pwd)/nginx/search.conf",
    "stop:nginx": "nginx -p $(pwd)/nginx -c $(pwd)/nginx/search.conf -s stop || true",
    "stop:api": "kill -9 $(ss -tulpn | awk '/:3100 /{print $7}' | cut -d, -f1) 2>/dev/null || true",
    "web:dev": "npm --prefix apps/search-web run dev",
    "web:build": "npm --prefix apps/search-web run build",
    "seed:opensearch": "node scripts/opensearch-seed.js",
    "setup:opensearch:food": "node scripts/opensearch-setup-food.js",
    "setup:opensearch:ecom": "node scripts/opensearch-setup-ecom.js",
    "index:food": "bash scripts/index-food.sh",
    "index:ecom": "bash scripts/index-ecom.sh",
    "db:import:sql": "bash scripts/mysql-import.sh",
    "db:introspect": "node scripts/mysql-introspect.js",
    "db:index:mysql": "node scripts/mysql-to-opensearch.js",
    "connect:register": "scripts/register-connector.sh",
    "cdc:run": "node scripts/cdc-to-opensearch.js",
    "ai:export": "node scripts/ai/clickhouse-trending-export.js --window 7d --limit 200 --out data/ai/trending-queries.jsonl",
    "ai:weaklabel": "node scripts/ai/opensearch-weaklabel.js --in data/ai/trending-queries.jsonl --out data/ai/weaklabel.jsonl --k 20",
    "ai:train": "node scripts/ai/train-stub.js --in data/ai/weaklabel.jsonl --out data/ai/model.json",
    "ai:evaluate": "node scripts/ai/evaluate-stub.js --in data/ai/weaklabel.jsonl",
    "ai:pipeline": "npm run ai:export && npm run ai:weaklabel && npm run ai:train && npm run ai:evaluate"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.2",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.3.2",
    "@nestjs/platform-express": "^10.3.2",
    "@nestjs/swagger": "^7.4.2",
    "@opensearch-project/opensearch": "^2.6.0",
    "axios": "^1.13.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.4.5",
    "ioredis": "^5.3.2",
    "kafkajs": "^2.2.4",
    "mysql2": "^3.11.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^4.6.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.2"
  }
}
